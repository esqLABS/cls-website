<style>
    /* Programs Grid Custom Styles */
    .programs-grid {
        padding: 1rem 0;
    }

    .programs-grid-container {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 20px;
        width: 100%;
        margin: 0 auto;
    }

    .program-card {
        width: 100%;
        border-radius: 12px;
        overflow: hidden;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        height: 360px;
        display: flex;
        flex-direction: column;
    }

    .program-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
    }

    .program-image-wrapper {
        position: relative;
        height: 100px;
        overflow: hidden;
        background: linear-gradient(45deg, #f3f4f6, #e5e7eb);
    }

    .program-image {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.3s ease;
    }

    .program-card:hover .program-image {
        transform: scale(1.05);
    }

    .program-info {
        padding: 1rem;
        display: flex;
        flex-direction: column;
        flex-grow: 1;
    }

    .program-category {
        font-size: 0.75rem;
        color: #6b7280;
        text-transform: uppercase;
        letter-spacing: 0.05em;
        margin-bottom: 0.15rem;
    }

    .program-title {
        font-size: 1.1rem;
        font-weight: 600;
        color: #111827;
        margin-top: 0;
        margin-bottom: 0.4rem;
        line-height: 1.2;
    }

    .program-description {
        color: #4b5563;
        font-size: 0.875rem;
        margin-bottom: 0.5rem;
        display: -webkit-box;
        -webkit-line-clamp: 5;
        -webkit-box-orient: vertical;
        overflow: hidden;
        flex-grow: 1;
    }

    .program-footer {
        display: flex;
        justify-content: flex-end;
        align-items: center;
        margin-top: auto;
    }

    @media (max-width: 767px) {
        .programs-grid-container {
            grid-template-columns: 1fr;
        }
    }
</style>

<div class="programs-grid">
    <div class="programs-grid-container">
        <% for (let i=0; i < items.length; i++) { %>
            <div class="program-card">
                <div class="program-image-wrapper">
                    <img src="<%- items[i].image || '/images/default-program.jpg' %>" alt="<%- items[i].title %>"
                        class="program-image">
                </div>
                <div class="program-info">
                    <div class="program-category"><%- items[i].category %></div>
                    <h3 class="program-title"><%- items[i].title %></h3>
                    <p class="program-description"><%- items[i].description %></p>
                    <div class="program-footer">
                        <a href="<%- items[i].path %>" class="btn btn-outline-secondary">Learn More</a>
                    </div>
                </div>
            </div>
            <% } %>
    </div>
</div>
