                                <span class="news-category">
                                    <%= item.category %>
                                </span>
                                <% } %>
                        </div>
                        <h2 class="news-title">
                            <a href="<%- item.path %>">
                                <%= item.title %>
                            </a>
                        </h2>
                    </header>
                    <% if (item.image) { %>
                        <div class="news-image">
                            <img src="<%- item.image %>" alt="<%- item.title %>">
                        </div>
                        <% } %>
                            <% if (item.description) { %>
                                <div class="news-excerpt">
                                    <p>
                                        <%= item.description %>
                                    </p>
                                </div>
                                <% } %>
                                    <footer class="news-footer">
