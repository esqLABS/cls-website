```{=html}
<div class="list">
    <% for (const event of items) { %>
        <div class="card card-base border-secondary mb-3 h-100 event-card">
            <div class="card-body d-flex p-0 h-100">
                <div class="event-image-container">
                    <img src="<%- event.image || '/assets/placeholders/events.png' %>"
                        class="h-100 w-100 object-fit-cover" alt="<%- event.title %>">
                </div>
                <div class="d-flex flex-column p-3 flex-grow-1">
                    <h4 class="card-title"><%- event.title %></h4>
                    <div class="text-muted mb-2">
                        <i class="bi bi-calendar"></i> <%- event.date %>
                            <% if (event.location) { %>
                                <span class="ms-3"><i class="bi bi-geo-alt"></i> <%- event.location %></span>
                                <% } %>
                    </div>
                    <p class="card-text flex-grow-1"><%- event.description %></p>
                    <div class="d-flex justify-content-end mt-auto">
                        <a href="<%- event.url || event.path %>" class="btn btn-outline-secondary"
                            target="<%- event.url ? '_blank' : '_self' %>">Learn More</a>
                    </div>
                </div>
            </div>
        </div>
        <% } %>
</div>
